}

<h1>Validation de RDV</h1>

<h3>Etes vous sur de vouloir valider ceci?</h3>
<div>
    <hr />
    <h4>Rendez-vous</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AtHome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AtHome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NurseId)
